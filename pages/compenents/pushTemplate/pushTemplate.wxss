._form {
    width: 100%;
    height: 100%;
}

.form_btn {
    margin: 0;
    padding: 0;
    border-color: transparent!important;
    border: none;
    background: transparent!important;
}

.layout_form {
    width: 100%;
    height: 100%;
}

.form_btn::after {
    content: '';
    width: 0;
    height: 0;
    transform: scale(1);
    display: none;
    background-color: transparent;
}